#!/bin/sh
############################################################
# history
############################################################
# Created by. Daejeon Office
# 2022.09.31 Version : Yoon Jun Su
############################################################
# 
############################################################
# current path init
export tbis_current_path=`pwd`

# environment function list
fun_env_shell(){
	env_shell=`uname -a |grep -i "Ubuntu"`

	if [ -n "$env_shell" ]
	then
		export tbis_shell="bash"
		bash $tbis_current_path/fun/tbis_fun_main.sh
	elif [ -z "$env_shell" ]
	then
		export tbis_shell="sh"
		sh $tbis_current_path/fun/tbis_fun_main.sh
	else
		echo "tbis message> tbis
		echo "  error> tbis - shell check
		exit 1
	fi
}

############################################################
#
############################################################
# 
case $1 in
	"")
		fun_env_shell;;
	"-bash"|"--bash"|"bash")
		export env_shell="bash"
		bash $tbis_current_path/fun/tbis_fun_main.sh;;
	"docker")
		export tbis_mode="docker"
		export env_shell="bash"
		bash $tbis_current_path/fun/tbis_fun_main.sh docker;;
	*)
		echo ""
		echo "[*] TIBERO Installation shell script"
		echo "-----------------------------------------------------------------"
		echo "usage: ./tbis [option]"
		echo "-----------------------------------------------------------------"
		echo "options:"
		echo "  bash		default: sh"
		echo "  docker	default: interactive mode"
		echo "-----------------------------------------------------------------"
		echo "";;
esac
